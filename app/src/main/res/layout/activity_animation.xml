<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mobin.devchild.Animation">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answer"

            android:textSize="44dp"

            />
    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifDog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dog"
            />
        <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifWrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tenor"
        />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/a"
            />


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifGrape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/grapes"
            />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifUmbrella"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/umbrellagif"
            />
    </FrameLayout>

</LinearLayout>
